<Window x:Class="Calabonga.HorseOnTheGridMvvm.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" Height="450" Width="600" Icon="/Assets/Icon.png">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"  VerticalAlignment="Center" Text="0" HorizontalAlignment="Center" 
                       FontSize="26"/>

            <Border Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="BlueViolet" BorderThickness="1"
                    RenderOptions.EdgeMode="Aliased" Margin="10,0,10,0">

                <UniformGrid 
                             Width="400"
                             Height="400"
                             SnapsToDevicePixels="True"
                             RenderOptions.BitmapScalingMode="HighQuality"/>

            </Border>
            <TextBlock Grid.Row="2"
                       Text="PRESS SPACE TO START"
                       FontSize="22"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="Black"
                       Margin="0,0,0,10"/>
        </Grid>
    </Viewbox>
</Window>
